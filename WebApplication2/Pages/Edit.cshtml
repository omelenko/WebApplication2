@page
@model EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Книгу за назвою</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="book.Name" class="control-label">Назва</label>
                <input asp-for="book.Name" class="form-control" />
                <span asp-validation-for="book.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="book.Author" class="control-label">Автор</label>
                <input asp-for="book.Author" class="form-control" />
                <span asp-validation-for="book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="book.Style" class="control-label">Стиль</label>
                <input asp-for="book.Style" class="form-control" />
                <span asp-validation-for="book.Style" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="book.Publisher" class="control-label">Видавництво</label>
                <input asp-for="book.Publisher" class="form-control" />
                <span asp-validation-for="book.Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="book.Year" class="control-label">Рік випуску</label>
                <input asp-for="book.Year" class="form-control" />
                <span asp-validation-for="book.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Підтвердити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Books">Назад до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
